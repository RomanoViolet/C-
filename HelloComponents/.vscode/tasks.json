{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GCC Debug Build",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/.devcontainer/BuildScripts/Docker/GeneralBuild",
                "args": [
                    "debug",
                    "GCC",
                    "20"
                ]
            },
            "windows": {
                "command": "echo Configuration not complete for a Windows system."
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "GCC Release Build",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/.devcontainer/BuildScripts/Docker/GeneralBuild",
                "args": [
