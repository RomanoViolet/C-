        {
            "label": "Generate Coverage Report",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/.devcontainer/BuildScripts/Docker/Generate-Coverage-from-UnitTests"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Echo Environment Variables",
            "type": "shell",
            "linux": {
                "command": "echo",
                "args": [
                    "${workspaceFolder}"
                ],
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
